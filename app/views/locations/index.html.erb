<h1>Listing locations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Add1</th>
    <th>Add2</th>
    <th>City</th>
    <th>Postcode</th>
    <th>Lat</th>
    <th>Lon</th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%=h location.name %></td>
    <td><%=h location.description %></td>
    <td><%=h location.email %></td>
    <td><%=h location.phone %></td>
    <td><%=h location.add1 %></td>
    <td><%=h location.add2 %></td>
    <td><%=h location.city %></td>
    <td><%=h location.postcode %></td>
    <td><%=h location.lat %></td>
    <td><%=h location.lon %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New location', new_location_path %>